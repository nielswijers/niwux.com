---
type Props = {
  title: string;
  description?: string;
};

const { title, description }: Props = Astro.props;
---

<section class="bg-gradient-to-br from-blue-500 to-purple-600 py-12">
  <div class="container">
    <div class="max-w-3xl">
      <h1 class="text-4xl font-bold text-white">{title}</h1>
      <p class="text-lg text-white/90">{description}</p>
    </div>
  </div>
</section>
